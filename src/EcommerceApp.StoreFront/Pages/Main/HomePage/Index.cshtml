                            </div>
                        </article>
                        <article class="collection collection_2">
                            <div class="collection__all">
                                <div class="collection__mob-image">
                                <a class="collection__image" data-bg="img/collections/collections-image_3.jpg"
                                        href="#"></a>
                                    <span class="collection__category">sweters</span>
                                </div>
                                <div class="collection__row">
                                    <div class="collection__cell">
                                        <div class="collection__content">
                                            <span class="collection__subtitle category-subtitle"><b>men</b>
                                                collection</span>
                                            <h4 class="collection__title">new Autumn <br>arrivals 2020</h4>
                                            <a class="collection__more read-more" href="shop.html">Shop now</a>
                                        </div>
                                    </div>
                                </div>
                                <a class="collection__link" href="shop.html"></a>
                            </div>
                        </article>
                        <article class="collection collection_3">
                            <div class="collection__all">
                                <div class="collection__mob-image">
                                    <a class="collection__image" data-bg="img/collections/collections-image_4.jpg"
                                        href="#"></a>
                                    <span class="collection__category">dresses</span>
                                </div>
                                <div class="collection__row">
                                    <div class="collection__cell">
                                        <div class="collection__content">
                                            <span class="collection__subtitle category-subtitle"><b>women</b>
                                                collection</span>
                                            <h4 class="collection__title">Trendy look <br>for every day</h4>
                                            <a class="collection__more read-more" href="shop.html">Shop now</a>
                                        </div>
                                    </div>
                                </div>
                                <a class="collection__link" href="shop.html"></a>
                            </div>
                        </article>
                        <div class="collections__bottom">
                            <div class="collections__max">
                                <h3 class="collection-title">
                                    <span class="collection-title__count">5649</span>
                                    <span class="collection-title__plus">+</span>
                                    <span class="collection-title__text">Satisfied clients</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="load-more">
                        <a class="button" href="collections.html">
                            <span class="button__text">View all collections</span>
                        </a>
                    </div>
                </div>
                <img class="collection-block__bg-left"
                    src="img/svg/vector-collections.svg" alt="">
                <img class="collection-block__bg-right"
                    src="img/svg/vector-collections.svg" alt="">
            </section>
            <!-- COLLECTION END -->

            <!-- BEGIN PRODUCTS -->
            @await Component.InvokeAsync(PageConstants.FeaturedProduct);
            <!-- PRODUCTS END -->

            <!-- BEGIN DEAL OF THE WEEK -->
            <section class="deal-block">
                <div class="deal-block__cols">
                    <div class="deal-block__col">
                        <div class="deal-block__image" data-bg="img/collections/deal-of-the-week.jpg"></div>
                        <div class="deal-block__content">
                            <div class="deal-block__row">
                                <div class="deal-block__cell">
                                    <span class="deal-block__subtitle category-subtitle"><b>deal</b> of the week</span>
                                    <h3 class="deal-block__title">Stay warm <br>and trendy</h3>
                                    <div class="timer js-timer"></div>
                                    <a class="deal-block__button button" href="shop.html">
                                        <span class="button__text">Shop now</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <img class="deal-block__bg"
                            src="img/svg/vector-deal.svg" alt="">
                    </div>
                </div>
            </section>
            <!-- BEGIN DEAL OF THE WEEK END -->

            <!-- BEGIN ADVANTAGES -->
            <div class="advantages wrapper">
                <div class="advantages__list">
                    <article class="advantage">
                        <div class="advantage__content">
                            <div class="advantage__icon-wrap">
                                <img class="advantage__icon" src="~/img/svg/advantages-icon_1.svg" alt="">
