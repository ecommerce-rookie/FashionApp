@using StoreFront.Domain.Constants

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceApp.StoreFront</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/store-front.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/toast/toast.css" asp-append-version="true" />

    <page-styles />
</head>
<body data-notif-type="@TempData["NotifType"]" data-notif-message="@TempData["NotifMessage"]">
    <div class="page-container" id="app">
        @{
            await Html.RenderPartialAsync(PageConstants.Header);

            await Html.RenderPartialAsync(PageConstants.Navigation);
        }

        @RenderBody()

        @{
            await Html.PartialAsync(PageConstants.Footer);

            await Html.RenderPartialAsync(PageConstants.Toast);
        }
    </div>

    <script src="~/lib/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/lib/jquery/jquery-migrate-1.4.1.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>

    <page-scripts />
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/lib/toast/toast.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>