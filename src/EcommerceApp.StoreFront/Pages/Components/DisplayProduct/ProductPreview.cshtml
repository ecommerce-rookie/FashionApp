@model StoreFront.Domain.Models.ProductModels.Responses.ProductPreviewResponseModel

@{
    var product = Model;
}

<article class="short-item" data-product-id="@product.Id">
    <div class="short-item__all">
        <a class="short-item__image-bg" href="/products/@product.Slug">
            <img class="short-item__image" src="@product.Image" alt="thumbnail">
            <button class="add-to-cart-btn">
                <img src="~/img/svg/icon-add-to-cart.svg" />
            </button>
        </a>
        <div class="short-item__top">
            <div class="short-item__cols">
                <div class="short-item__col">
                    @if (product.IsNew)
                    {
                        <span class="item-tag item-tag_green">New</span>
                    }

                    @if (product.PurchasePrice != product.UnitPrice)
                    {

                        <span class="item-tag item-tag_red">Sale</span>
                    }
                </div>
                <div class="short-item__col">
                    <button class="heart-button js-toggle-active"></button>
                </div>
            </div>
        </div>
        <h4 class="short-item__title">
            <a class="short-item__link" href="/products/@product.Slug">@product.Name</a>
        </h4>
        <span class="short-item__price">@product.PurchasePrice.ToString("N0") đ</span>
        <span class="short-item__old-price">@product.UnitPrice.ToString("N0") đ</span>
    </div>
</article>